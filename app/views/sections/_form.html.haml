= simple_form_for @section do |f|
	/ = f.error_notification

	.form-inputs
		= f.input :block, as: :radio_buttons, collection: Settings.blocks, wrapper_html: {id: 'blocks'}, required: true
		= f.input :room, as: :string, wrapper_html: {id: 'room'}
		= f.input :semester, as: :select, collection: Course::DURATIONS, wrapper_html: {id: 'durations'}, include_blank: false
		= f.button :submit
