#editor
	= simple_form_for @document do |f|
		.form-inputs
			.title= f.input :title
			.editor= f.input :content, as: :ckeditor, input_html: { height: 300, toolbar: "Full" }, label: false

:coffeescript
	$("#editor").dialog
		autoOpen: true
		height: 500
		width: 600
		modal: true
		resizable: true
		buttons:
			"Save": ->
			Cancel: ->
				$(this).dialog "close"
