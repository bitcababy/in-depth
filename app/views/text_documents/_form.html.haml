#editor.ui-widget
	= simple_form_for @text_document do |f|
		.form-inputs
			= f.input :content, as: :ckeditor, input_html: { height: 400, toolbar: "Full" }, label: false
		.form-actions
			%button{class: ['ui-button ui-button-text-only', 'ui-state-default', 'ui-widget', 'ui-corner-all'] }
				= f.button :submit
			%button{class: ['ui-button ui-button-text-only', 'ui-widget', 'ui-corner-all'] }
				= f.button :submit, type: :reset, value: 'Cancel'
	
	
:coffeescript
	$ ->
		$("input:cancel, a, button", "#editor").button()
		$("a", ".editor").click ->
			false
