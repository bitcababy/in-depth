= simple_form_for assignment, validation: true, remote: true, url: assignments_path(assignment) do |af|
	%fieldset#top
		= af.input :teacher_id, as: :hidden
		%table#sas
			%thead
				%tr
					%th.block Block
					%th.due_date Due date
					%th.use Use?
			%tbody
				= af.simple_fields_for :section_assignments do |saf|
					%tr
						%td.block
							=saf.object.block
							= saf.input :block, disabled: true, label: false, input_html: {size: 1}, as: :hidden
						%td.due_date= saf.input :due_date, as: :datepicker, label: false, input_html: { size:10, value: saf.object.due_date.strftime("%m/%d/%Y") }
						%td.published= saf.input :published, label: false, as: :boolean
						= saf.input :section, as: :hidden
			%fieldset#bottom
				.name= af.input :name, input: { size: 20 }, required: true
				.content= af.input :content, as: :ckeditor, input_html: { height: 400, toolbar: "Full" }, label: false, required: true
	%button.save= af.submit "Create"
	%button.cancel= af.submit "Cancel"
