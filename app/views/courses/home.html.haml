/ %meta{charset: "utf-8"}
- content_for :page_header do
	= @course.full_name

- content_for :page_title do
	= @course.full_name
#tabs
	%ul
		- if @section
			%li#assignments
				%a{href: assignments_pane_section_path(@section), title: 'Assignments'}= "Assignments for #{@course.full_name}, Block #{@section.block}"
		%li
			%a{href: show_course_pane_path(@course, :sections), title: 'Sections'} Sections
		%li
			%a{href: show_course_pane_path(@course, :information), title: 'Information'} Information
		%li
			%a{href: show_course_pane_path(@course, :resources), title: 'Resources'} Resources
		%li
			%a{href: show_course_pane_path(@course, :policies), title: 'Policies'} Policies
		%li
			%a{href: show_course_pane_path(@course, :news), title: 'News'} News
#editor

:coffeescript
	$(document).ready ->
		editor = $('#editor')

		setupTabEditor = (editor, tabDiv) ->
			editor.dialogForm "init",
				width: 700
				height: 600
				ckid: 'text_document_content'

			editor.on 'savedAndClosed', (evt, url) ->
				pn = $(tabDiv).tabs "option", "active"
				$(tabDiv).tabs 'load', pn
				
		setupTabEditor editor, '#tabs'
			
		$("#tabs").tabs
			event: 'click'
			load: (evt, ui) ->
				btns = $('.edit-button', ui.panel)
				editor.dialogForm 'bindLinks', $('.edit-button', ui.panel)
